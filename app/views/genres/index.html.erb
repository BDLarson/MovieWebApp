<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <h1>Genres</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre["name"] %>
              </td>
              <td><%= link_to 'Show', genre_url(genre["id"]),
                class: "btn btn-info btn-sm"%>
              </td>
              <td><%= link_to 'Edit', edit_genre_path(genre["id"]),
                class: "btn btn-warning btn-sm" %>
              </td>
              <td>
                <%= link_to 'Destroy', genre_url(genre["id"]),
                 method: :delete,
                 data: { confirm: 'Are you sure?' },
                 class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Genre', new_genre_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
